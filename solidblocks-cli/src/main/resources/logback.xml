<configuration>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CONSOLE"/>
  </root>

  <logger name="com.jcabi.manifests.Manifests" level="WARN">
    <appender-ref ref="CONSOLE" />
  </logger>

  <!--
  <logger name="org.jooq.tools.LoggerListener" level="debug">
    <appender-ref ref="Console"/>
  </logger>

  <logger name="org.jooq" level="debug">
    <appender-ref ref="Console"/>
  </logger>
  -->

</configuration>